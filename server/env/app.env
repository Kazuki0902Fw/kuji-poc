# Server Configuration
PORT=5050
ENV=development

# Database Configuration
DATABASE_DSN=root:secret@tcp(db:3306)/kujicole-server?parseTime=true
DATABASE_MAX_OPEN_CONNECTIONS=5
DATABASE_MAX_IDLE_CONNECTIONS=5
DATABASE_CONNECTION_MAX_LIFETIME_SECONDS=300
DATABASE_QUERY_LOGGING=false

# JWT Auth (開発用のダミー値 - 本番環境では適切な鍵を設定してください)
JWT_AUTH_BASE64_PRIVATE_KEY=dummy_private_key_for_development
JWT_AUTH_BASE64_PUBLIC_KEY=dummy_public_key_for_development

# AWS S3 (開発用のダミー値 - 本番環境では適切な値を設定してください)
S3_BUCKET_NAME=dummy_bucket
S3_BUCKET_REGION=ap-northeast-1

# Sentry (開発用のダミー値 - 本番環境では適切なDSNを設定してください)
SENTRY_DSN=
